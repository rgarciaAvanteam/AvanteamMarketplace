@page
@model AvanteamMarketplace.API.Pages.ErrorModel
@{
    ViewData["Title"] = "Erreur";
}

<div class="error-container">
    <h1 class="text-danger">Erreur.</h1>
    <h2 class="text-danger">Une erreur s'est produite lors du traitement de votre demande.</h2>

    @if (Model.ShowRequestId)
    {
        <p>
            <strong>ID de la demande:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <p>
        <strong>Message d'erreur:</strong> @Model.ErrorMessage
    </p>
    
    <div class="mt-4">
        <a href="/admin" class="btn btn-primary">Retour Ã  l'administration</a>
    </div>
</div>